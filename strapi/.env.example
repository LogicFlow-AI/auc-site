# Server Configuration
HOST=0.0.0.0
PORT=1337

# Security Keys (generate your own using: openssl rand -base64 32)
APP_KEYS=your-key-1,your-key-2,your-key-3,your-key-4
ADMIN_JWT_SECRET=your-admin-jwt-secret
API_TOKEN_SALT=your-api-token-salt
TRANSFER_TOKEN_SALT=your-transfer-token-salt
JWT_SECRET=your-jwt-secret

# Database Configuration (Supabase PostgreSQL)
DATABASE_CLIENT=postgres
DATABASE_HOST=db.YOUR-PROJECT-REF.supabase.co
DATABASE_PORT=5432
DATABASE_NAME=postgres
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=YOUR-SUPABASE-PASSWORD
DATABASE_SSL=true

# Optional: Connection string (alternative to individual settings)
# DATABASE_URL=postgresql://postgres:YOUR-PASSWORD@db.YOUR-PROJECT-REF.supabase.co:5432/postgres
